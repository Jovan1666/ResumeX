{
  "name": "resumex",
  "version": "1.0.0",
  "description": "ResumeX - 免费专业简历制作工具",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "build:setup": "node build-setup.js"
  },
  "devDependencies": {
    "electron": "33.2.1",
    "electron-builder": "25.1.8",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.resumex.app",
    "productName": "ResumeX",
    "copyright": "Copyright © 2025 ResumeX",
    "directories": {
      "output": "release/installer"
    },
    "files": [
      "electron/**/*",
      "webapp/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "electron/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ResumeX",
      "installerLanguages": [
        "zh_CN",
        "en_US"
      ],
      "language": "2052"
    }
  }
}
